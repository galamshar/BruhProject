{% extends 'common/base.html.j2' %}
{% block content %}
<form method="post" action="">
    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}"/>
    {{ event_close_form }}
    <input type="submit" value="Settle the event"/>
</form>
<hr/>
<h4>Related establishments:</h4>
<ul>
    {% for bet in bets %}
    <li>{{ bet.wallet.owner }} | {{ bet.value }} | {{ bet.chosen_result }}</li>
    {% endfor %}
</ul>

{% endblock %}